import groovy.json.JsonSlurper

@Library('labour-lib') _

pipeline {
    agent any
    stages {
        stage('send test mails') {
            steps {
                script{
                    def jss = new JsonSlurper()
                    def orecp = jss.parseText("${recipients}");
                    Map mTemp = (Map) orecp;
                    mTemp.each { name, address ->
                        sendMail(name, address);
                    }
                }
            }
        }
    }
}